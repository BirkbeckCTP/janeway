{% extends "common/identifiers/crossref_doi_batch.xml" %}

<journal_metadata>
    <full_title>{{ journal_title }}</full_title>
    {% if print_issn and print_issn != '0000-0000' %}
    <issn media_type="print">{{ print_issn }}</issn>
    {% endif %}
    {% if article.ISSN_override %}
    <issn media_type="electronic">{{ article.ISSN_override }}</issn>
    {% elif journal_issn and journal_issn != '0000-0000' %}
    <issn media_type="electronic">{{ journal_issn }}</issn>
    {% endif %}
</journal_metadata>

{% if issue and issue.date %}
<journal_issue>
    {% if issue.issue_title %}
    <titles>
        <title>{{ issue.issue_title }}</title>
    </titles>
    {% endif %}
    <publication_date media_type="online">
        <month>{{ issue.date.month }}</month>
        <day>{{ issue.date.day }}</day>
        <year>{{ issue.date.year }}</year>
    </publication_date>

    <journal_volume>
        <volume>{{ issue.volume }}</volume>
    </journal_volume>
    <issue>{{ issue.issue }}</issue>
</journal_issue>
{% endif %}

{% for article in crossref_issue.articles %}
    {% include "common/identifiers/crossref_article.xml" with article=article %}
{% endfor %}
